{
  "name": "msikma-lib-projects",
  "version": "1.0.0",
  "description": "Monorepo container for msikma-lib-projects, containing a number of client libraries",
  "private": true,
  "homepage": "https://github.com/msikma/msikma-lib-projects",
  "author": "Michiel Sikma <michiel@sikma.org>",
  "license": "MIT",
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/bin/",
      "<rootDir>/test*.*"
    ]
  },
  "bin": {
    "buyee-cli": "./packages/web-scrapers-buyee-js/bin/buyee-cli.js"
  },
  "scripts": {
    "list-packages": "node scripts/pkgList.js",
    "lint-all": "for d in `find packages -maxdepth 1 -mindepth 1 -type d`; do eslint $d/src; done; exit 0",
    "build-all": "for d in `find packages -maxdepth 1 -mindepth 1 -type d`; do npm run build --prefix $d; done",
    "lint-diff": "eslint `git diff --name-only master | grep -i \".js$\"`; exit 0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^23.4.0",
    "babel-plugin-transform-class-properties": "^6.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.1.0",
    "babel-polyfill": "^6.1.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.1.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.0",
    "eslint-plugin-react": "^7.2.0",
    "jest": "^23.4.1",
    "regenerator-runtime": "^0.12.0",
    "lerna": "^2.11.0"
  },
  "dependencies": {
    "lodash": "^4.17.5"
  }
}
